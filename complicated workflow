name: CI Workflow

on:
  push:
    branches: ["main"]
  pull_request:
    branches: ["main"]
  workflow_dispatch:

env:
  APP_ENV: production
  DEBUG: true

jobs:
  # First Job: Run Tests
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.8'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run tests
        run: |
          echo Running tests...
          # Simulate a test command, replace with real tests like `pytest`
          echo "Test successful"

  # Second Job: Build Application
  build:
    runs-on: ubuntu-latest
    needs: test  # This ensures that the build job only runs if the test job succeeds
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install dependencies
        run: |
          echo Installing Node.js dependencies...
          # Simulate install command, replace with actual commands if available
          echo "Dependencies installed"

      - name: Build the application
        run: |
          echo Building the app...
          # Simulate build command, replace with actual build command like `npm run build`
          echo "Build successful"
